= form_for @notification do |f|
  -if @notification.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notification.errors.count, "error")} prohibited this notification from being saved:"
      %ul
        - @notification.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :lang_id
    = f.number_field :lang_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :branch_id
    = f.number_field :branch_id
  .actions
    = f.submit 'Save'
